<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_consolidated_tree_view" model="ir.ui.view">
            <field name="name">mrp.production.consolidated.tree</field>
            <field name="model">mrp.production.consolidated</field>
            <field name="arch" type="xml">
                <list string="Consolidated Manufacturing Orders" create="0" delete="0">
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="mrp_production_consolidated_form_view" model="ir.ui.view">
            <field name="name">mrp.production.consolidated.form</field>
            <field name="model">mrp.production.consolidated</field>
            <field name="arch" type="xml">
                <form string="Consolidated Manufacturing Orders">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,progress,done"/>
                        <button name="action_done" invisible="state not in ['draft', 'confirmed']" string="Mark as done"
                                type="object" class="oe_highlight" data-hotkey="v"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_mrp_production" type="object" icon="fa-wrench" invisible="mrp_production_count == 0" groups="mrp.group_mrp_user">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="mrp_production_count"/></span>
                                    <span class="o_stat_text">Manufacturing</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="name" placeholder="Manufacturing Reference" nolabel="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="product_ids" widget="many2many_tags" readonly="state != 'draft'"/>
                            <field name="user_id"/>
                        </group>
                        <notebook>
                            <page string="Components" name="components">
                                <field name="component_line_ids"
                                       readonly="state in ['cancel', 'done']"
                                       default_order="product_id"
                                >
                                    <list editable="bottom">
                                        <field name="state" column_invisible="1"/>
                                        <field name="product_id" force_save="1" required="1" readonly="state != 'draft'"/>
                                        <field name="component_product_id" force_save="1" readonly="state != 'draft'"/>
                                        <field name="bom_id" readonly="state != 'draft'"/>
                                        <field name="propagate_cancel" column_invisible="1"/>
                                        <field name="picking_type_id" column_invisible="1"/>
                                        <field name="price_unit" column_invisible="1"/>
                                        <field name="company_id" column_invisible="1"/>
                                        <field name="name" column_invisible="1"/>
                                        <field name="date_planned_start" column_invisible="1"/>
                                        <field name="date_planned_finished" column_invisible="1"/>
                                        <field name="date_deadline" column_invisible="1"/>
                                        <field name="product_uom_id" column_invisible="1"/>
                                        <field name="component_qty" readonly="state != 'draft'"/>
                                        <field name="product_qty" readonly="state != 'draft'"/>
                                        <field name="product_uom_qty" column_invisible="1"/>
                                        <field name="orderpoint_id" column_invisible="1"/>
                                        <field name="production_group_id" column_invisible="1"/>
                                        <field name="location_src_id" column_invisible="1"/>
                                        <field name="location_dest_id" column_invisible="1"/>
                                        <field name="warehouse_id" column_invisible="1"/>
                                        <field name="move_dest_ids" column_invisible="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="mrp_production_consolidated_action" model="ir.actions.act_window">
            <field name="name">Consolidated Manufacturing Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production.consolidated</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No consolidated manufacturing order found.
                </p>
            </field>
        </record>

        <menuitem action="mrp_production_consolidated_action"
                  id="menu_mrp_production_action_consolidated1"
                  parent="mrp.menu_mrp_manufacturing"
                  sequence="2"/>
    </data>
</odoo>
