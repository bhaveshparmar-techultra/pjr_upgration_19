<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="sale_order_form_manufactuing_consolidated" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.manufactuing.consolidated</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="has_mrp_production_consolidated" invisible="1" force_save="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_mrp_production_consolidated"
                        type="object" icon="fa-wrench" invisible="not has_mrp_production_consolidated" groups="mrp.group_mrp_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Consolidated Manufacturing</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</data></odoo>