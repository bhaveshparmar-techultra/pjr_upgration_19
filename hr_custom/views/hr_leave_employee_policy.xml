<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- hr leave employee policy tree view -->

  <record id="hr_leave_employee_policy_tree_view" model="ir.ui.view">
    <field name="name">hr.leave.employee.policy.tree</field>
    <field name="model">hr.leave.employee.policy</field>
    <field name="arch" type="xml">
      <list string="Leave Employee Policy">
        <field name="employee_id"  />
        <field name="day_from" />
        <field name="day_to" />
        <field name="deduction_rate" />
        <field name="deduction_base" />
        <field name="total_days" />
        <field name="consumed_days" />
        <field name="remaining_days" />
      </list>
    </field>
  </record>

  <!-- action  -->

  <record id="hr_leave_employee_policy_action" model="ir.actions.act_window">
    <field name="name">Leave Employee Policy</field>
    <field name="res_model">hr.leave.employee.policy</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- menuitem -->

  <menuitem id="hr_custom.menu_hr_leave_employee_policy" name="Leave Employee Policy"
    parent="hr_holidays.menu_hr_holidays_report" action="hr_leave_employee_policy_action"
    sequence="1" />

</odoo>