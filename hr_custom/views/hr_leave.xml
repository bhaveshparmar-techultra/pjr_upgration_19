<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_leave_inherit_form" model="ir.ui.view">
            <field name="model">hr.leave</field>
            <field name="name">view.hr.leave.form.hr_custom</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <!-- Leave Lines stat button -->
                    <button name="open_leave_lines" type="object"
                        invisible="leave_line_ids_count == 0"
                        class="oe_stat_button oe_button_box" icon="fa-bars">
                        <field name="leave_line_ids_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
