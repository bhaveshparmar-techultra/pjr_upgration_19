<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_company_inherit_overtime_form" model="ir.ui.view">
      <field name="model">res.company</field>
      <field name="name">view.company.hr_custom.form</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="arch" type="xml">
        <xpath expr="//group[@name='social_media']" position="before">
          <group string="Overtime Settings" name="overtime_settings">
            <field name="overtime_calculation" />
            <field name="regular_overtime_rate" invisible="not overtime_calculation" />
            <field name="weekend_overtime_rate" invisible="not overtime_calculation" />
            <field name="public_holiday_overtime_rate" invisible="not overtime_calculation" />
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>