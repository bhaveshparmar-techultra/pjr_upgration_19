<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="sale_order_report_inherit" inherit_id="account.report_invoice_document">
        <!--  hide tax column inside the invoice header       -->
        <xpath expr="//th[@name='th_taxes']" position="replace">
        </xpath>
        <xpath expr="//td[@name='td_taxes']" position="replace">
        </xpath>
<!--        <xpath expr="//p[@name='comment']" position="replace">-->
<!--        </xpath>-->

<!--        <xpath expr="//td[@name='td_taxes']" position="attributes">-->
<!--            <attribute name="class">oe_hidden</attribute>-->
<!--        </xpath>-->

        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name="th_packing" class="text-end">Packing</th>
            <th name="th_total_units" class="text-end">Total units</th>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="after">
            <td class="text-end">
                <span t-field="line.product_uom_id.factor"/> <!-- uom ratio-->
            </td>
            <td class="text-end">
                <t t-set='total_units' t-value="line.quantity * line.product_uom_id.factor"/>
                <t t-esc="total_units"/>
            </td>
        </xpath>
        <xpath expr="//div[@id='qrcode']" position="after">
            <t t-if="o.partner_bank_id">
                <div class="row">
                    <table class="table table-sm o_main_table rs-table-bordered"
                           style="font-size:18px; width:100%;font-size:11px; ">
                        <tr class="text-left">
                            <th name="th_bank_account" class="text-left" style="font-wight:bold;font-size:16px;">
                                Account
                            </th>
                            <th name="th_bank_account_value">
                                <t t-esc="o.partner_bank_id.acc_holder_name" class="text-left" />
                            </th>
                        </tr>
                        <tr>
                            <th name="th_bank_name" class="text-left" style="font-wight:bold;font-size:16px;">Bank</th>
                            <th name="th_bank_name_value">
                                <t t-esc="o.partner_bank_id.bank_id.name" class="text-left" />
                            </th>
                        </tr>
                        <tr>
                            <th name="th_account_number" class="text-left" style="font-wight:bold;font-size:16px;">Account
                                Number
                            </th>
                            <th name="th_account_number_value" >
                                <t t-esc="o.partner_bank_id.acc_number" class="text-left" />
                            </th>
                        </tr>
                        <tr>
                            <th name="th_iban" class="text-left" style="font-wight:bold;font-size:16px;">IBAN</th>
                            <th name="th_iban_value" class="text-left" >
                                <t t-esc="o.partner_bank_id.res_partner_iban"/>
                            </th>
                        </tr>
                         <tr>
                            <th name="th_iban" class="text-left" style="font-wight:bold;font-size:16px;">Swift Code</th>
                            <th name="th_iban_value">
                                <t t-esc="o.partner_bank_id.swift_code" class="text-left" />
                            </th>
                        </tr>
                    </table>
                </div>
            </t>
            <br/>
            <div class="row">
                <table class="table table-sm o_main_table rs-table-bordered"
                       style="font-size:11px;">
                    <tr>
                        <th colspan="2" style="font-wight:bold;font-size:16px;">
                            Prepared By
                        </th>
                        <th colspan="2" style="font-wight:bold;font-size:16px;">Check
                            and Approved
                        </th>
                        <th colspan="2" style="font-wight:bold;font-size:16px;">
                            Received By
                        </th>
                    </tr>
                    <tr>
                        <th class="text-left"
                            style="width:90px;">Name:
                        </th>
                        <th style="width:33%;">
                            <t t-esc="o.create_uid.name"/>
                        </th>
                        <th class="text-left"
                            style="width:90px;">Name:
                        </th>
                        <th style="width:33%;">
                            <t t-esc="o.approved_user_id.name"/>

                        </th>
                        <th class="text-left"
                            style="width:90px;">Name:
                        </th>
                        <th style="width:33%;"></th>
                    </tr>
                    <tr>
                        <th class="text-left" style="">
                            Designation:
                        </th>
                        <th style="">
                            <t t-esc="o.create_uid.function"/>
                        </th>
                        <th class="text-left" style="">
                            Designation:
                        </th>
                        <th style="">
                            <t t-esc="o.approved_user_id.function"/>
                        </th>
                        <th class="text-left" style="">
                            Designation:
                        </th>
                        <th style=""></th>
                    </tr>
                    <tr>
                        <th class="text-left" style="">
                            Signature:
                        </th>
                        <th class="signature">. . . . . . . . . . . . . . . . . . . . . . . . . . . .</th>
                        <th class="text-left" style="">
                            Signature:
                        </th>
                        <th class="signature">. . . . . . . . . . . . . . . . . . . . . . . . . . . .</th>
                        <th class="text-left" style="">
                            Signature:
                        </th>
                        <th class="signature">. . . . . . . . . . . . . . . . . . . . . . . . . . . .</th>
                    </tr>
                </table>
            </div>

        </xpath>


    </template>
</odoo>