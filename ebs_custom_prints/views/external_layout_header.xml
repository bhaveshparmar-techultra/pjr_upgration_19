<?xml version="1.0" encoding="utf-8" ?>
<odoo>

      <record id="paperformat_invoice_order" model="report.paperformat">
            <field name="name">Custome A4 Invoice Order</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">60</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">60</field>
        </record>

        <!--  # remove default formate from invoice print out      -->
<!--    <record id="account.account_invoices" model="ir.actions.report">-->
<!--        <field name="paperformat_id" ref="ebs_custom_prints.paperformat_invoice_order"/>-->
<!--    </record>-->


    <template id="address_layout_inherit" inherit_id="web.address_layout">
        <xpath expr="//div[contains(@t-attf-class, 'address')]" position="attributes">
            <attribute name="style">margin-top: 150px;</attribute>
        </xpath>
    </template>

    <template id="external_layout_custom_header" inherit_id="web.external_layout_standard">
        <xpath expr="//div[contains(@t-attf-class, 'header')]" position="replace">
            <div t-attf-class="header o_company_#{company.id}_layout">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 70px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-end" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6" name="company_address">
                        <div t-field="company.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                        />
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>