<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_form_invoice_origin" model="ir.ui.view">
        <field name="name">account.move.form.inherit.account.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add analytic_account_ids field after analytic_distribution in invoice_line_ids -->
            <xpath expr="//field[@name='invoice_line_ids']//list//field[@name='analytic_distribution']" position="after">
                <field name="analytic_account_ids" widget="many2many_tags" optional="show" groups="analytic.group_analytic_accounting"/>
            </xpath>
            <!-- Add analytic_account_ids field after analytic_distribution in line_ids (Journal Items tab) -->
            <xpath expr="//field[@name='line_ids']//list//field[@name='analytic_distribution']" position="after">
                <field name="analytic_account_ids" widget="many2many_tags" optional="show" groups="analytic.group_analytic_accounting"/>
            </xpath>
        </field>
    </record>
</odoo>