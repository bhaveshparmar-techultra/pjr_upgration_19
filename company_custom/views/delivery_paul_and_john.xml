<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_paul_and_john_delivery_document">
        <t t-call="web.html_container">
            <t t-call="company_custom.external_layout_other_partner">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-set="partner" t-value="o.partner_id or (o.move_ids and o.move_ids[0].partner_id) or False"/>
                <t t-if="partner" name="partner_header">
                    <t t-set="address">
                        <div t-esc="partner"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                   </t>
                </t>

                <div class="page">
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <strong>Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Shipping Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done"/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date"/>
                           </t>
                        </div>
                    </div>
                    <t t-if="o.picking_type_id.code =='internal'">
                        <br />
                        <div class="row mt32 mb32">
                            <div class="col-auto">
                                <strong>From</strong>
                                <t t-if="o.move_line_ids">
                                    <p t-field="o.move_line_ids[0].location_id"/>
                                </t>
                            </div>
                            <div class="col-auto">
                                <strong>To</strong>
                                <t t-if="o.move_line_ids">
                                    <p t-field="o.move_line_ids[0].location_dest_id"/>
                                </t>
                            </div>
                        </div>
                        <br />
                    </t>
                    <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                        <thead>
                            <tr>
                                <th name="th_sm_product"><strong>Product</strong></th>
                                <t t-if="o.sale_id">
                                    <th name="th_description" class="text-left">Description</th>
                                </t>
                                <th name="th_packing" class="text-left">Packing</th>
                                <th name="th_total_units" class="text-left">Total units</th>
                                <th name="th_sm_quantity"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_ids.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>
                                    <p t-if="move.description_picking != move.product_id.name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <t t-if="o.sale_id">
                                    <td class="text-left">
                                        <!-- Odoo 19: product_description → description_picking -->
                                        <span t-field="move.description_picking"/>
                                    </td>
                                </t>
                                <td class="text-left">
                                    <!-- Odoo 19: factor_inv removed, calculate as 1/factor -->
                                    <t t-set="factor_inv_value" t-value="1.0 / move.product_uom.factor if move.product_uom.factor else 1.0"/>
                                    <span t-esc="factor_inv_value"/>
                                </td>
                                <td class="text-left">
                                    <t t-set='total_units' t-value="move.product_uom_qty * factor_inv_value"/>
                                    <t t-esc="total_units"/>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <!-- Odoo 19: Simplified done state table - avoid using stock templates that require format_number -->
                    <table class="table table-sm mt48" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')"/>
                        <thead>
                            <tr>
                                <th name="th_sml_product"><strong>Product</strong></th>
                                <t t-if="o.sale_id">
                                    <th name="th_sml_description" class="text-left">Description</th>
                                </t>
                                <th name="th_sml_packing" class="text-left">Packing</th>
                                <th name="th_sml_total_units" class="text-left">Total units</th>
                                <t name="lot_serial" t-if="has_serial_number">
                                    <th>Lot/Serial Number</th>
                                </t>
                                <th name="th_sml_quantity" class="text-center"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="move_line.move_id.description_picking and move_line.move_id.description_picking != move_line.product_id.display_name">
                                        <span t-field="move_line.move_id.description_picking"/>
                                    </p>
                                </td>
                                <t t-if="o.sale_id">
                                    <td class="text-left">
                                        <span t-field="move_line.move_id.description_picking"/>
                                    </td>
                                </t>
                                <td class="text-left">
                                    <t t-set="factor_inv_val" t-value="1.0 / move_line.product_uom_id.factor if move_line.product_uom_id.factor else 1.0"/>
                                    <span t-esc="factor_inv_val"/>
                                </td>
                                <td class="text-left">
                                    <t t-set="total_units_val" t-value="move_line.quantity * factor_inv_val"/>
                                    <span t-esc="total_units_val"/>
                                </td>
                                <t t-if="has_serial_number">
                                    <td>
                                        <span t-field="move_line.lot_id"/>
                                    </td>
                                </t>
                                <td class="text-center">
                                    <span t-field="move_line.quantity"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="color:black;">
                            <p style="font-weight: bold;">Prepared By
                            </p>
                            <p>Name :
                              <span t-field="o.env.user.name"/>
                            </p>
                            <p>Designation :
                            </p>
                            <p>Signature : .........................
                            </p>
                          </div>
                          <br/>
                            <div style="font-weight: bold; color:black;float:left">
                              <p>
                    We have received the goods in good condition
                    </p>
                    <p>
                    and we undertake to pay them full in accordance
                    </p>
                    <p>
                    The terms of payment in invoice.
                    </p>
                    </div>

                            <div style="font-weight: bold; color:black;float:right">
                                <p>
                    تسلمنا البضاعة بحالة جيدة و نتعهد بسداد قيمتها الكاملة
                    </p>
                    <p style="font-weight: bold; color:black;float:right">
                    .حسب شروط السداد الموضحه بالفاتورة</p>
                    </div>
                    <div style="clear:both">
                    <div style="font-weight: bold; color:black;float:left">
                              <p>
                    Received By:-</p>
                    <p>
                    Signature:-</p>
                    </div>
                    <div style="font-weight: bold; color:black;float:right">
                              <p>
                    :-المستلم</p>
                    <p style="font-weight: bold; color:black;float:right">
                    :-التوقيع</p>
                    </div>
                    </div>
                    <t t-set="backorders" t-value="o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))"/>
                    <t t-if="o.backorder_ids and backorders">
                        <p>
                            <span>All items couldn't be shipped, the following items will be shipped as soon as they become available.</span>
                        </p>
                    </t>

                    <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="o.partner_id.name"/>
                        </div>
                    </div>
                </div>
            </t>
         </t>
    </template>
        <template id="report_paul_and_john_delivery">
            <t t-foreach="docs" t-as="o">
                <t t-call="company_custom.report_paul_and_john_delivery_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>
        <!-- Odoo 19: Use record instead of report shortcut -->
        <record id="account_invoices_paul_and_john_delivery" model="ir.actions.report">
            <field name="name">Paul and John Delivery</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">company_custom.report_paul_and_john_delivery</field>
            <field name="report_file">company_custom.report_paul_and_john_delivery</field>
            <field name="print_report_name">'Paul and John Delivery - %s' % object.name</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
