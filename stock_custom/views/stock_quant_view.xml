<odoo>
    <record id="view_quant_form_inherit_stock_inventory_quantity" model="ir.ui.view">
        <field name="name">stock.quant.form.inventory.quantity.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory_quantity_auto_apply']" position="replace">
                <field name="can_edit_inventory_quantity" invisible="1"/>
                <field name="inventory_quantity_auto_apply" string="On Hand Quantity" decoration-danger="inventory_quantity_auto_apply &lt; 0"
                       readonly="not can_edit_inventory_quantity"/>
            </xpath>
        </field>
    </record>
</odoo>
