<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_vendor_statement.statement_document">
        <t t-call="web.external_layout">
            <div class="page" style="font-family: 'Times New Roman', Times, serif; color:black;">
                    <div class="col-xs-5">
                        <div class="row">
                        <h5 style="padding-left:30em" t-field="o.name"/><br/>
                        </div>
                    </div>
                        <div class="row">
                    <h5 style="padding-left:20em">
                        Statement
                    </h5>
                        </div>
                <div class="row">
                    <h6 style="font-size: 14px;">
                        Date: <span t-esc="Date[o.id]"/><br/>
                        <t t-if="o.ref">Partner ref: <span t-field="o.ref"/></t>
                    </h6>
                </div>

                    <t t-if="Lines[o.id]">
                        <br/>
                        <t t-foreach="Lines[o.id]" t-as="currency">
                            <div class="row">
                            <br t-if="not currency_first"/>
                            <h6 style="font-size: 14px;">
                                Transaction in <span t-esc="Currencies[o.id][currency].name"/>:
                            </h6>
                            </div>
                            <div class="row">
                            <table class="table table-sm"  style="border: 1px solid black;color: black;width:100%">
                                    <tr style="font-weight: bold; color:black; font-size: 14px;">
                                        <td style="border-right: 1px solid black;border-bottom: 1px solid black;text-align:left;">Reference number</td>
                                        <td  style="border-right: 1px solid black;border-bottom: 1px solid black; text-align:center;">Date</td>
                                        <td style="border-right: 1px solid black;border-bottom: 1px solid black; text-align:left;">Description</td>
                                        <td class="text-right" style="border-right: 1px solid black;border-bottom: 1px solid black;">Debit</td>
                                        <td class="text-right" style="border-right: 1px solid black;border-bottom: 1px solid black;">Credit</td>
                                        <td class="text-right" style="border-right: 1px solid black;border-bottom: 1px solid black;">Balance</td>
                                    </tr>
                                <tr style="font-size: 14px; color: black;">
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;"/>
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="Date_start[o.id]"/>
                                    </td>
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        Initial Balance
                                    </td>
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;"/>
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;"/>
                                    <td class="text-right" t-if="currency in Balance_forward[o.id]" style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="Balance_forward[o.id][currency]" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" t-if="currency not in Balance_forward[o.id]" style="border-right: 1px solid black;border-bottom: 1px solid #d7d9db ;">
                                        <span t-esc="0.0000" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                </tr>
                                <tr t-foreach="Lines[o.id][currency]" t-as="line" style="font-size: 14px;color: black;">
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="line['move_id']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="line['date']"/>
                                    </td>
                                    <td style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <t t-if="line['name'] != '/'">
                                            <t t-if="not line['ref']"><span t-esc="line['name']"/></t>
                                            <t t-if="line['ref'] and line['name']">
                                                <t t-if="line['name'] not in line['ref']"><span t-esc="line['name']"/></t>
                                                <t t-if="line['ref'] not in line['name']"><span t-esc="line['ref']"/></t>
                                            </t>
                                        </t>
                                        <t t-if="line['name'] == '/'"><span t-esc="line['ref']"/></t>
                                    </td>
                                    <td class="text-right" style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="line['debit']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="line['credit']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-bottom: 1px solid #d7d9db ;border-right: 1px solid black;">
                                        <span t-esc="line['balance']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                </tr>
                                <tr style="font-size: 14px;color: black;">
                                    <td style="border-right: 1px solid black;"/>
                                    <td style="border-right: 1px solid black;">
                                        <span t-esc="Date_end[o.id]"/>
                                    </td>
                                    <td style="border-right: 1px solid black;">
                                        Ending Balance
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;"><span t-esc="total_debit"/></td>
                                    <td class="text-right" style="border-right: 1px solid black;"><span t-esc="total_credit"/></td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Amount_Due[o.id][currency]" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                </tr>
                            </table>
                            </div>
                            <table class="table table-condensed" t-if="Show_Buckets" style="border: 1px solid black; border-collapse: collapse;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="border-right: 1px solid black;">Current Due</th>
                                        <th class="text-center" style="border-right: 1px solid black;">1-30 Days Due</th>
                                        <th class="text-center" style="border-right: 1px solid black;">30-60 Days Due</th>
                                        <th class="text-center" style="border-right: 1px solid black;">60-90 Days Due</th>
                                        <th class="text-center" style="border-right: 1px solid black;">90-120 Days Due</th>
                                        <th class="text-center" style="border-right: 1px solid black;">+120 Days Due</th>
                                        <th class="text-right" style="border-right: 1px solid black;">Balance Due</th>
                                    </tr>
                                </thead>
                                <tr t-if="currency in Buckets[o.id]">
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['current']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['b_1_30']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['b_30_60']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['b_60_90']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['b_90_120']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['b_over_120']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="Buckets[o.id][currency]['balance']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                </tr>
                                <tr t-if="currency not in Buckets[o.id]">
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid black;">
                                        <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </t>
                <div class="row">
                    <p t-if="not Lines[o.id]">
                        <strong>The partner doesn't have due entries.</strong>
                    </p>
                </div>
            </div>
       </t>
    </template>

    <template id="statement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="not (Filter_non_due_partners and (not Lines[o.id]) and (len(doc_ids) > 1))">
                    <t t-call="customer_vendor_statement.statement_document" t-lang="o.lang"/>
                </t>
            </t>
        </t>
    </template>

    <!-- Odoo 19: Use record instead of report shortcut -->
    <record id="action_print_customer_vendor_statement" model="ir.actions.report">
        <field name="name">Customer / Vendor Statement</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">customer_vendor_statement.statement</field>
        <field name="report_file">customer_vendor_statement.statement</field>
        <field name="print_report_name">'Customer Vendor Statement - %s' % object.name</field>
    </record>
</odoo>
