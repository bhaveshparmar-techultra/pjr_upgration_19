<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <template id="journal_entry_template_report_view">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <br/>
                    <br/>
                    <div class="oe_structure"/>
                    <div>
                        <h3 class="text-center mb32">
                            <strong>Journal Entry</strong>
                        </h3>
                    </div>
                    <br/>

                    <div class="row" id="journal_information">
                        <div class="col-8">
                            <div>
                                <strong>Journal Entry :</strong>
                                <p t-field="o.name"/>
                            </div>

                            <div class="text-start">
                                <strong>Date :</strong>
                                <p t-field="o.date"/>
                            </div>
                        </div>

                        <div class="col-8">
                            <div>
                                <strong>Journal :</strong>
                                <p t-field="o.journal_id"/>
                            </div>
                            <div class="text-start">
                                <strong>Reference :</strong>
                                <p t-field="o.ref"/>
                            </div>
                        </div>
                    </div>


                    <br/>
                    <br/>
                    <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Partner</th>
                                <th>Account</th>
                                <th>Label</th>
                                <th>Due Date</th>
<!--                                <th>Analytic Account</th>-->
                                <th>Analytic Account</th>
                                <th>Taxes(%)</th>
                                <th>Debit</th>
                                <th>Credit</th>
                            </tr>
                        </thead>
                        <tbody class="consumed_tbody">
                            <t t-set="total" t-value="0.0"/>
                            <t t-set="total1" t-value="0.0"/>
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.partner_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.account_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.date_maturity"/>
                                    </td>
<!--                                    <td>-->
<!--                                        <span t-field="line.analytic_distribution"/>-->
<!--                                    </td>-->
                                    <td>
                                        <span t-foreach="line.analytic_distribution" t-as="distribution">
                                            <t t-esc="line.env['account.analytic.account'].browse(int(distribution))[0].name"/>
                                            :
                                            <t t-esc="line.analytic_distribution.get(distribution)"/>
                                            <br/>
                                        </span>
                                    </td>
                                    <td>
                                        <span t-field="line.tax_ids"/>
                                    </td>
                                    <td>
                                        <span t-field="line.debit"/>
                                    </td>
                                    <td>
                                        <span t-field="line.credit"/>
                                    </td>
                                </tr>
                                <t t-set="total" t-value="total + line.debit"/>
                                <t t-set="total1" t-value="total1 + line.credit"/>
                            </t>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
<!--                                <td></td>-->
                                <td></td>
                                <td></td>
                                <td>
                                    <strong>Total:</strong>
                                </td>
                                <td width="10%">
                                    <strong>
                                        <span>
                                            <t t-esc="total"/>
                                        </span>
                                    </strong>
                                </td>
                                <td width="10%">
                                    <strong>
                                        <span>
                                            <t t-esc="total1"/>
                                        </span>
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                </div>
                <div class="row">
                    <table class="table table-sm o_main_table rs-table-bordered"
                           style="font-size:11px;">
                        <tr>
                            <th colspan="2" style="font-weight:bold;font-size:16px;">
                                Prepared By
                            </th>
                            <th colspan="2" style="font-weight:bold;font-size:16px;">Check
                                and Approved
                            </th>
                            <th colspan="2" style="font-weight:bold;font-size:16px;">
                                Received By
                            </th>
                        </tr>
                        <tr>
                            <th class="text-start"
                                style="width:90px;">Name:
                            </th>
                            <th style="width:33%;">
                                <t t-esc="o.create_uid.name"/>
                            </th>
                            <th class="text-start"
                                style="width:90px;">Name:
                            </th>
                            <th style="width:33%;">
                                <t t-if="'approved_user_id' in o._fields" t-esc="o.approved_user_id.name"/>
                            </th>
                            <th class="text-start"
                                style="width:90px;">Name:
                            </th>
                            <th style="width:33%;"></th>
                        </tr>
                        <tr>
                            <th class="text-start" style="">
                                Designation:
                            </th>
                            <th style="">
                                <t t-esc="o.create_uid.function"/>
                            </th>
                            <th class="text-start" style="">
                                Designation:
                            </th>
                            <th style="">
                                <t t-if="'approved_user_id' in o._fields" t-esc="o.approved_user_id.function"/>
                            </th>
                            <th class="text-start" style="">
                                Designation:
                            </th>
                            <th style=""></th>
                        </tr>
                        <tr>
                            <th class="text-start" style="">
                                Signature:
                            </th>
                            <th class="signature">. . . . . . . . . . . . . . . . . . . . . . . . . . . .</th>
                            <th class="text-start" style="">
                                Signature:
                            </th>
                            <th class="signature">. . . . . . . . . . . . . . . . . . . . . . . . . . . .</th>
                            <th class="text-start" style="">
                                Signature:
                            </th>
                            <th class="signature">. . . . . . . . . . . . . . . . . . . . . . . . . . . .</th>
                        </tr>
                    </table>
                </div>
            </t>
        </template>

        <template id="journal_entry_report_template_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="bi_print_journal_entries.journal_entry_template_report_view" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>
