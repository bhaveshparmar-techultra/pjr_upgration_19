<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="purchase_order_form_inherits" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Add company_check field (invisible) -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="company_check" invisible="True"/>
            </xpath>

            <!-- Add length and width fields before product_qty -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_qty']" position="before">
                <field name="length" optional="hide" column_invisible="parent.company_check"/>
                <field name="width" optional="hide" column_invisible="parent.company_check"/>
            </xpath>

            <!-- Set product_id options to disable create -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
