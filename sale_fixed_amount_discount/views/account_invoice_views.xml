<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_invoice_discount_form" model="ir.ui.view">
        <field name="name">account.invoice.discount.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']" position="after">
                <field name="discount_amount" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
